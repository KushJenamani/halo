

{
  "manifest_version": 3,
  "name": "Halo",
  "version": "1.0.0",
  "description": "Create persistent highlights across the web",

  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["./static/js/highlighter.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}